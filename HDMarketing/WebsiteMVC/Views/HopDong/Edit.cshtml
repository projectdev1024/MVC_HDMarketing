@model WebsiteMVC.Models.HopDong

@{
    ViewBag.Title = "HỢP ĐỒNG";
    Layout = "~/Views/Shared/_Layout_Edit.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDHopDong)
        @Html.HiddenFor(model => model.Active)
        @Html.HiddenFor(model => model.NguoiTao)
        @Html.HiddenFor(model => model.NgayTao)
        @Html.HiddenFor(model => model.DaThanhToan)
        @Html.HiddenFor(model => model.Rate)

        <div class="form-group">
            @Html.LabelFor(model => model.MaHopDong, "Mã HD (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.MaHopDong, new { htmlAttributes = new { @class = "form-control" } }).Required()
                @Html.ValidationMessageFor(model => model.MaHopDong, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.IDLoaiHD, "Loại HD (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListForRequired(q => q.IDLoaiHD, ViewBag.IDLoaiHDs as SelectList)
                @Html.ValidationMessageFor(model => model.IDLoaiHD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDKhachHang, "Khách hàng (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListForRequired(q => q.IDKhachHang, ViewBag.IDKhachHangs as SelectList)
                @Html.ValidationMessageFor(model => model.IDKhachHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ChiPhi, "Tổng giá trị (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.ChiPhi, new { htmlAttributes = new { @class = "form-control" } }).Required().Type(htmlType.number)
                @Html.ValidationMessageFor(model => model.ChiPhi, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.NguoiPhuTrach, "Người phụ trách (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownListForRequired(q => q.NguoiPhuTrach, ViewBag.NguoiPhuTrachs as SelectList)
                @Html.ValidationMessageFor(model => model.NguoiPhuTrach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoiDung, "Nội dung (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } }).Required()
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayKy, "Ngày kí (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DateFor(model => model.NgayKy).Required()
                @Html.ValidationMessageFor(model => model.NgayKy, "", new { @class = "text-danger" })
            </div>

            @Html.LabelFor(model => model.HanHD, "Hạn HD (*)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DateFor(model => model.HanHD).Required()
                @Html.ValidationMessageFor(model => model.HanHD, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn green" />
                <a href="@Url.Action("Index")" class="btn btn-default"><i class="fa fa-arrow-circle-o-left"></i> QUAY LẠI DANH SÁCH</a>
            </div>
        </div>
    </div>
}